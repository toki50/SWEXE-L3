<%if @student.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @student.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
  
<%= form_with model: @student do |f| %>
  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>
  <%= f.label :number, '学籍番号' %>
  <%= f.text_field :number %>
  <%= f.label :maile, 'メールアドレス' %>
    <%= f.text_field :maile %>
    <%= f.submit '更新' %>
  
<% end %>